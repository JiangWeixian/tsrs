{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@demo/package-b": ["../package-b/src/index.ts"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "importHelpers": false,
    "outDir": "lib",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
